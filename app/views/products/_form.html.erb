<div class="container" id="products_form">
<% if @product.errors.any? %>
     <% @product.errors.full_messages.each do |message|%>
         <h6><%= message %> </h6>
     <%end%>
<%end%>
</div>
<br>
<%= form_with(model:@product, local: false) do |f| %>
  <div>
   <%= f.label :name %>
   <%= f.text_field :name, class:'form-control' %>
  </div>
  <br />
  <div> 
     <%= f.label :price %> 
     <%= f.text_field :price,class:'form-control' %>
  </div>
  <br />
  <div>
     <%= f.label :category_id %><br>
     <%= f.select :category_id,(Category.all.map{|e| [e.category_name, e.id]}),class:'form-control' %>
  </div>
  <br />  
  <div>
     <%= f.label :order,"delivery_type" %><br>
     <%= collection_check_boxes(:product, :order_ids, Order.all, :id, :payment_type) %>
  </div> 
  <br>
    <%= f.submit :submit,class:'btn btn-success' %>
<% end %>

