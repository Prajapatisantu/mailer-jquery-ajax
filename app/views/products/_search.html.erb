<%= form_tag(search_path, method: :get) do %>  
  <div class="input-group">  
    <div class="form-outline">
      <%= search_field_tag :search, params[:search], placeholder: "Search product", class: "form-control" %>  
    </div>
      <%= button_tag '<i class="fa fa-search"></i>'.html_safe, class: 'btn btn-warning',name: nil %>
  </div>  
<% end %>








