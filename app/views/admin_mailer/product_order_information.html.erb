<h1>Product order information</h1>


<h3><center><%= @order_information.product.name %></center></h3>
   <p>
      <strong>Customer name: </strong>
      <span><%= @order_information.user.firstname.capitalize %></span>
   </p>
   <p>
      <strong>Order reference ID: </strong>
      <span><%= @order_information.order_ref %></span>
   </p>
   <p>
      <strong>Product price: </strong>
      <span><%= @order_information.product.price %></span>
   </p>
   <p>
      <strong>payment type: </strong>
      <span><%= @order_information.payment_type %></span>
   </p>
   <p>
      <strong>Order date: </strong>
      <span><%= @order_information.created_at.strftime("%d %b %Y") %></span>
   </p>
  